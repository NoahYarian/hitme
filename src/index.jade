doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title HIT ME
    link(rel='stylesheet', href='css/main.css')
    link(rel="icon", type="image/png", href="images/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="images/favicon-16x16.png", sizes="16x16")
  body
    .container
      .table
        .chips.insuranceChips
        .chips.playerChips
        .chips.split1Chips
        .chips.split2Chips
        .chips.split1aChips
        .chips.split1bChips
        .chips.split2aChips
        .chips.split2bChips
        .chipHiding
        .dealer
          .hand.dealerHand
          .total.dealerTotal
        .insurance
          .wager.insuranceWager
          button.btn.insuranceButton.hidden Insurance
        .noDealerBlackjack.hidden
          p Dealer does not have blackjack
        .player
          .hand.playerHand
          .total.playerTotal
          .wager.playerWager
          button.btn.splitButton(disabled) Split
          .popup.announcePlayer
        .split1
          .hand.split1Hand
          .total.split1Total
          .wager.split1Wager
          button.btn.split1Button(disabled) Split
          .popup.announceSplit1
        .split2
          .hand.split2Hand
          .total.split2Total
          .wager.split2Wager
          button.btn.split2Button(disabled) Split
          .popup.announceSplit2
        .split1a
          .hand.split1aHand
          .total.split1aTotal
          .wager.split1aWager
          .popup.announceSplit1a
        .split1b
          .hand.split1bHand
          .total.split1bTotal
          .wager.split1bWager
          .popup.announceSplit1b
        .split2a
          .hand.split2aHand
          .total.split2aTotal
          .wager.split2aWager
          .popup.announceSplit2a
        .split2b
          .hand.split2bHand
          .total.split2bTotal
          .wager.split2bWager
          .popup.announceSplit2b
        .bankChips
        .bankTotal
        .buttons
          button.btn.deal Deal
          button.btn.double(disabled) Double
          button.btn.hit(disabled) Hit
          button.btn.stay(disabled) Stay
        img.chip.chip1(data-id="1", src="images/chip-1.png")
        img.chip.chip5(data-id="5", src="images/chip-5.png")
        img.chip.chip10(data-id="10", id="selectedBet", src="images/chip-10.png")
        img.chip.chip25(data-id="25", src="images/chip-25.png")
        img.chip.chip50(data-id="50", src="images/chip-50.png")
        img.chip.chip100(data-id="100", src="images/chip-100.png")
        img.strategyImg(src="images/strategy.png")
        .advantage-gauge
          .levels
              span.red
              span.green
            .gauge-needle
          .houseText HOUSE
          .playerText PLAYER
          .advantageText ADVANTAGE
          .percentMarkers
            .neg2 -2%
            .neg4 -4%
            .pos2 +2%
            .pos4 +4%
        button.toggleCountInfo
        .countInfo.hidden
          .count Count: 0
          .trueCount True Count: 0
          .cardsLeft Cards left: 312
          .decksLeft Decks left: 6 of 6
        button.toggleTestPanel
        .testPanel.hidden
          .dealer1
            p To Dealer
            select.dealer1Value
              option ace
              option 2
              option 3
              option 4
