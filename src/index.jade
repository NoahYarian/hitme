doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title HIT ME
    link(rel='stylesheet', href='css/main.css')
    //- link(rel="icon", type="image/png", href="images/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="images/favicon-16x16.png", sizes="16x16")
  body
    .container
      //- button.giveSplitHand Split Test
      .table
        img.chip.chip1(data-id="1", src="images/chip-1.png")
        img.chip.chip5(data-id="5", src="images/chip-5.png")
        img.chip.chip10(data-id="10", src="images/chip-10.png")
        img.chip.chip25(data-id="25", id="selectedBet", src="images/chip-25.png")
        img.chip.chip50(data-id="50", src="images/chip-50.png")
        img.chip.chip100(data-id="100", src="images/chip-100.png")
        .handChips
        .currentWager
        .bankChips
        .bankTotal
        .total.dealerTotal
        .total.playerTotal
        .dealer
        .player
        //- .playerSplit.hidden
        //-   .total.hand1Total
        //-   .hand1
        //-   .total.hand2Total
        //-   .hand2
        //- button.btn.split(disabled) Split
        .buttons
          button.btn.doubleDown(disabled) Double
          button.btn.newGame Deal
          button.btn.hit(disabled) Hit
          button.btn.stay(disabled) Stay
        .announce
          p
        .count Count: 0
        .trueCount True Count: 0
        .advantage-gauge
          .levels
              span.red
              span.green
            .gauge-needle
          .houseText HOUSE
          .playerText PLAYER
          .advantageText ADVANTAGE
          .percentMarkers
            .neg1 -1%
            .neg2 -2%
            .pos1 +1%
            .pos2 +2%
        button.toggleTestPanel
        .testHand
          .dealer1
            p To Dealer
            select.dealer1Value
              option ACE
              option 2
              option 3
              option 4
              option 5
              option 6
              option 7
              option 8
              option 9
              option 10
              option JACK
              option QUEEN
              option KING
            select.dealer1Suit
              option CLUBS
              option DIAMONDS
              option HEARTS
              option SPADES
          .dealer2
            select.dealer2Value
              option ACE
              option 2
              option 3
              option 4
              option 5
              option 6
              option 7
              option 8
              option 9
              option 10
              option JACK
              option QUEEN
              option KING
            select.dealer2Suit
              option CLUBS
              option DIAMONDS
              option HEARTS
              option SPADES
          .player1
            p To Player
            select.player1Value
              option ACE
              option 2
              option 3
              option 4
              option 5
              option 6
              option 7
              option 8
              option 9
              option 10
              option JACK
              option QUEEN
              option KING
            select.player1Suit
              option CLUBS
              option DIAMONDS
              option HEARTS
              option SPADES
          .player2
            select.player2Value
              option ACE
              option 2
              option 3
              option 4
              option 5
              option 6
              option 7
              option 8
              option 9
              option 10
              option JACK
              option QUEEN
              option KING
            select.player2Suit
              option CLUBS
              option DIAMONDS
              option HEARTS
              option SPADES
          button.testDeal Deal Cards
          .testCard
            select.giveCardValue
              option ACE
              option 2
              option 3
              option 4
              option 5
              option 6
              option 7
              option 8
              option 9
              option 10
              option JACK
              option QUEEN
              option KING
            select.giveCardSuit
              option CLUBS
              option DIAMONDS
              option HEARTS
              option SPADES
          button.dealerGiveCard To Dealer
          button.playerGiveCard To Player
    script(src="lib/build.js")
    script(src="main.js")

