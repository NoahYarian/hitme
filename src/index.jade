doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title HIT ME
    link(rel='stylesheet', href='css/main.css')
    link(rel="icon", type="image/png", href="images/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="images/favicon-16x16.png", sizes="16x16")
  body
    .container
      .table
        .dealer
          .hand.dealerHand
          .total.dealerTotal
        .player
          .hand.playerHand
          .total.playerTotal
          .chips.playerChips
          .wager.playerWager
          button.btn.splitButton(disabled) Split
          .popup.announce
        .split1
          .hand.split1Hand
          .total.split1Total
          .chips.split1Chips
          .wager.split1Wager
          button.btn.split1Button(disabled) Split
          .popup.announce1
        .split2
          .hand.split2Hand
          .total.split2Total
          .chips.split2Chips
          .wager.split2Wager
          button.btn.split2Button(disabled) Split
          .popup.announce2
        .split1a
          .hand.split1aHand
          .total.split1aTotal
          .chips.split1aChips
          .wager.split1aWager
          .popup.announce1a
        .split1b
          .hand.split1bHand
          .total.split1bTotal
          .chips.split1bChips
          .wager.split1bWager
          .popup.announce1b
        .split2a
          .hand.split2aHand
