          .chips.split2aChips
          .wager.split2aWager
          .popup.announce2a
        .split2b
          .hand.split2bHand
          .total.split2bTotal
          .chips.split2bChips
          .wager.split2bWager
          .popup.announce2b
        .bankChips
        .bankTotal
        .buttons
          button.btn.deal Deal
          button.btn.double(disabled) Double
          button.btn.hit(disabled) Hit
          button.btn.stay(disabled) Stay
        img.chip.chip1(data-id="1", src="images/chip-1.png")
        img.chip.chip5(data-id="5", src="images/chip-5.png")
        img.chip.chip10(data-id="10", src="images/chip-10.png")
        img.chip.chip25(data-id="25", id="selectedBet", src="images/chip-25.png")
        img.chip.chip50(data-id="50", src="images/chip-50.png")
        img.chip.chip100(data-id="100", src="images/chip-100.png")
        .advantage-gauge
          .levels
              span.red
              span.green
            .gauge-needle
          .houseText HOUSE
          .playerText PLAYER
          .advantageText ADVANTAGE
          .percentMarkers
            .neg1 -1%
            .neg2 -2%
            .pos1 +1%
            .pos2 +2%
        button.toggleCountInfo
        .countInfo.hidden
          .count Count: 0
          .trueCount True Count: 0
          .cardsLeft 312
          .decksLeft 6
        button.toggleTestPanel
        .testPanel.hidden
