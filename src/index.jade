          button.testDeal Deal Hands
          input.splitTesting(type="checkbox")
          label Split
          .testCard
            p Deal single card
            select.giveCardValue
              option ace
              option 2
              option 3
              option 4
              option 5
              option 6
              option 7
              option 8
              option 9
              option 10
              option jack
              option queen
              option king
            select.giveCardSuit
              option clubs
              option diamonds
              option hearts
              option spades
